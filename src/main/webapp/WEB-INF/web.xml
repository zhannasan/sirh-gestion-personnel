<?xml version="1.0" encoding="UTF-8"?>

<web-app>
	<display-name>sgp</display-name>
	<servlet>
		<servlet-name>ListerCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.ListerCollaborateurController
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListerCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/lister</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>EditerCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.EditerCollaborateurController
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EditerCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/editer</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CreerCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.CreerCollaborateurController
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreerCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/creer</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>RechercherCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.RechercherCollaborateurController
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RechercherCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/chercher</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>VisiteWebController</servlet-name>
		<servlet-class>dev.sgp.web.VisiteWebController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>VisiteWebController</servlet-name>
		<url-pattern>/collaborateurs/stats</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>FrequentationFilter</filter-name>
		<filter-class>dev.sgp.filtre.FrequentationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FrequentationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>


